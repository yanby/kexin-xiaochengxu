}
.txt{
  font-size: 30rpx;
  padding: 80rpx 0;
  line-height: 50rpx;
}

.page-button{
  margin-top: 50rpx;
}
.page-button .button {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 600;
  line-height: 56rpx;
  color: rgba(255,255,255,1);
  width: 650rpx;
  padding: 20rpx 0 18rpx;
