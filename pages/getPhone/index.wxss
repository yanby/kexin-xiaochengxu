.checkbox{
  font-size: 30rpx;
}
.checkbox text{
  color: #5BC177;
}
.modal{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5)
}
.modal-inner{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -350rpx;
  margin-top: -500rpx;

  width: 700rpx;
  height: 1000rpx;
  background: #fff;
}
.modal-list view{
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.modal-list{
  padding: 50rpx;
}
.ready{
  width: 200rpx;
  height: 80rpx;
  margin: 50rpx auto;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #5BC177;
}
.bold{
  text-decoration:underline;
}
.form-btn{
	position:absolute;
	top:0;
	left:0;
	right:0;
	bottom:0;
	opacity:0;
}