.picker {
  overflow: hidden;
  position: relative;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  font-size: 32rpx;
  max-width: 450rpx;
  padding-right: 30rpx;

}
.picker::after {
  display: block;
  content: '';
  position: absolute;
  top: 50%;
  right: 5rpx;
  width: 10rpx;
  height: 10rpx;
  margin-top: -5rpx;
  margin-left: 10rpx;
  border-top: 1rpx solid #000;
  border-left: 1rpx solid #000;
  transform: rotate(-135deg);
}
.close{
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  font-size: 50rpx;
