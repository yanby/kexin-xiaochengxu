
.page-welcome {
  width: 750rpx;
  margin: 0 auto;
  height:100%;
}

.welcome-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;  
  height: 100%;
  z-index: -10;
}

.welcome-bg image {
  width: 750rpx;
  height: 100%;
}

.title {
  font-size: 40rpx;
  font-family: SF Pro Text;
  font-weight: bold;
  width: 750rpx;
  padding: 200rpx 0 28rpx;
  line-height: 48rpx;
  color: #fff;
  text-align: center;
}

.page-center {
  width: 312rpx;
  height: 115rpx;
  margin: 274rpx auto 0;
}

.page-center image {
  width: 100%;
  height: 100%;
  background-size: 100%;
}

.page-tips {
  width: 630rpx;
  font-size: 28rpx;
  font-family: SF Pro Text;
  font-weight: 400;
  margin: 0 auto 80rpx;
  line-height: 52rpx;
  text-align: center;
  color: #fff;
}

.page-logo {
  width: 750rpx;
  height: 45rpx;
  margin-top: 14rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.page-logo image {
  width: 190rpx;
  height: 45rpx;
  background-size: 100%;
}

.page-button {
  width: 750rpx;
  text-align: center;
}

.page-button .button {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 600;
  line-height: 56rpx;
  color: rgba(255,255,255,1);
  width: 686rpx;
  padding: 20rpx 0 18rpx;
  margin: 0 auto 60rpx;
  text-align: center;
  background: #5BC177;
  border-radius: 6rpx;
}

.page-bottom {
  position: absolute;
  left: 0;
  bottom: 0;
}