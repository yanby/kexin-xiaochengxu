.page-create-farm {
  position: relative;
  width: 750rpx;
  padding-bottom: 100rpx;
}

.page-card {
  overflow: hidden;
  width: 688rpx;
  height: auto;
  margin: 54rpx auto 0;
  background: #FFF;
}

.page-title {
  font-size: 40rpx;
  font-family: SF Pro Text;
  font-weight: bold;
  color: rgba(89,87,87,1);
  padding: 50rpx 0 40rpx;
  text-align: center;
}

.page-input {
  width: 618rpx;
  margin: 10rpx auto 60rpx;
  border-bottom: 2rpx solid rgba(234,234,234,1);
}

.page-input input {
  width: 100%;
  color: #5BC177;
  font-size: 28rpx;
}

.page-box {
  display: flex;
  justify-content: space-between;
  width: 618rpx;
  height: 56rpx;
  margin: 0 auto 70rpx;
  color: rgba(91,193,119,1);
  line-height: 56rpx;
}

.type {
  font-size: 28rpx;
  font-family: SF Pro Text;
  font-weight: 400;
  width: 160rpx;
  background: rgba(255,255,255,1);
  border: 2rpx solid rgba(91,193,119,1);
  border-radius: 12rpx;
  text-align: center;
}

.jian,.jia {
  font-size: 30rpx;
  width: 66rpx;
  background: rgba(255,255,255,1);
  border: 2rpx solid rgba(191,191,191,1);
  border-radius: 12rpx;
  text-align: center;
}

.value {
  /*width: 160rpx;*/
  height: 100%;
  background: rgba(255,255,255,1);
  text-align: center;
  border: 2rpx solid rgba(211,211,211,1);
  border-radius: 12rpx;
}

.value input {
  font-size: 24rpx;
  font-family: SF Pro Text;
  font-weight: bold;
  color: rgba(51,51,51,1);
  height: 100%;
  width: 100rpx;
  margin: 0;
  padding: 0;
}

.map{
  width: 618rpx;
  margin: 0 auto;
}
.mapTop{
  width: 618rpx;
  height: 372rpx;
}
.mapTop image{
  width: 100%;
  height: 100%;
  background: #000;
}
.mapTxt{
  padding: 40rpx 0;
}
.address,.area{
  font-size: 28rpx;
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.address input,.area input{
  height: 40rpx;
  min-height: 40rpx;
}
.address text,.area text{
  display: inline-block;
}

.page-bot {
  /*position: absolute;*/
  bottom: 60rpx;
  width: 750rpx;
}

.page-logo {
  width: 750rpx;
  height: 45rpx;
  margin-top: 54rpx;
  margin-bottom: 36rpx;
  text-align: center;
}

.page-logo image {
  width: 190rpx;
  height: 45rpx;
  background-size: 100%;
}

.page-button {
  width: 750rpx;
  text-align: center;
}

.page-button .button {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 600;
  line-height: 56rpx;
  color: rgba(255,255,255,1);
  width: 686rpx;
  padding: 20rpx 0 18rpx;
  margin: 0 auto;
  text-align: center;
  background: #5BC177;
  border-radius: 6rpx;
}