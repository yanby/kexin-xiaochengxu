.farm-lists{
  padding: 30rpx;
  font-size: 28rpx;
}
.wrap{
  background: #fff;
  width: 630rpx;
  padding: 50rpx 30rpx 30rpx;
  margin: 0 auto 30rpx;
}
.modal{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.3);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}
.modal-inner{
  width: 600rpx;
  height: 300rpx;
  border-radius: 10rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -300rpx;
  margin-top: -150rpx;
  text-align: center;
  font-size: 32rpx;
  z-index: 1000;
}
.modal-txt{
  padding-top: 40rpx;
}
.modal-msg{
   width: 500rpx;
   margin: 30rpx auto;
}
.modal-msg input{
  width: 500rpx;
  border: 1rpx solid #eaeaea;
}
.modal-btn{
  display: flex;
  justify-content: space-around;
}
.modal-btn text{
  width: 150rpx;
  height:60rpx;
  line-height: 60rpx;
  background: #5BC177;
  color: #fff;
  border-radius: 10rpx;
}
.modal-btn text:nth-of-type(1){
  background: #ccc;
}
.name{
 position: relative;
}

.name .item-name{
  color: #69BE19;
  font-size: 34rpx;
}
.names{
  
  display: flex;
}
.gai{
  margin-left: 20rpx;
}
.gai image{
  width: 44rpx;
  height: 44rpx;
}
.del{
  position: absolute;
  right: 20rpx;
  top: 0rpx;
}
.del image{
  width: 44rpx;
  height: 44rpx;
}
.peng{
  padding: 30rpx 0;
}
.peng text:nth-of-type(1){
  margin-right: 40rpx;
}
.map{
  width: 630rpx;
  height: 372rpx;
  background: #000;
  margin-bottom: 20rpx;
}
.address,.area{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
}

.address input,.area input{
  width: 400rpx;
  padding-left: 20rpx;
  height: 58rpx;
  line-height: 58rpx;
  min-height: 58rpx;
  /* border: 1rpx solid #eaeaea; */
}

.btn{
  display: flex;
  /* justify-content: space-around; */
}
.btn view{
  width:240rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  border:1rpx solid #ccc;
  border-radius:6rpx;
  margin-top: 50rpx;
}
.addFarm{
  width: 140rpx;
  height: 140rpx;
  line-height: 120rpx;
  background: #5BC177;
  text-align: center;
  font-size: 100rpx;
  border-radius: 50%;
  color: #fff;
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  z-index: 100;
}