.facility-msg{
  width: 750rpx;
  margin: 0 auto;
  background: #fff;
  height: 100vh;
  padding-top:30rpx;
  padding-bottom: 50rpx;
}
.map{
  width: 100%;
  height: 550rpx;
}
.map image{
  width: 100%;
  height: 100%;
  background: #000;
}
.tips{
  width:702rpx;
  height:80rpx;
  margin: 30rpx auto;
  color: #888;
  text-align: center;
  line-height: 80rpx;
  font-size: 24rpx;
  background:rgba(253,252,253,1);
  border:1rpx solid rgba(230, 230, 230, 1);
  border-radius:20rpx;
}
.content{
  padding: 0 35rpx;
}
.list{
  display: flex;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}
.name{
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.peng{
  width:150rpx;
  height:68rpx;
  color: #C2C2C2;
  line-height: 68rpx;
  text-align: center;
  background:rgba(53,53,53,0);
  border:1rpx solid rgba(178, 178, 178, 1);
  border-radius:10rpx;
  margin-right: 30rpx;
}
.peng.cur{
  color: #69BE19;
  border:1px solid rgba(105, 190, 25, 1);
}
.picker{
  width: 340rpx;
  height: 68rpx;
  line-height: 68rpx;
  border:1rpx solid rgba(178, 178, 178, 1);
  text-align: center;
  background:rgba(53,53,53,0);
  border-radius:10rpx;
  margin-right: 30rpx;
}
.mianji{
  width: 400rpx;
  height: 68rpx;
  line-height: 68rpx;
  border:1rpx solid rgba(178, 178, 178, 1);
  text-align: center;
  background:rgba(53,53,53,0);
  border-radius:10rpx;
  margin-right: 30rpx;
  position: relative;
}
.mianji input{
  width: 400rpx;
  height: 68rpx;
  border: none;
}
.mianji text{
  position: absolute;
  right: 10rpx;
  top: 0rpx;
}
.btn{
  width:700rpx;
  height:70rpx;
  margin: 0 auto;
  line-height: 70rpx;
  background:#5BC177;
  border-radius:35rpx;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
}

.change input{
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border-radius:10rpx;
  width: 680rpx;
  border:1rpx solid rgba(178, 178, 178, 1);
}