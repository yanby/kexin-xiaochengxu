.page-home {
  position: relative;
  width: 750rpx;
}

.page-header {
  overflow: hidden;
  position: relative;
  width: 750rpx;
  height: 326rpx;
  background: rgba(89,87,87,1);
}

.page-avator {
  padding-top: 70rpx;
}

.page-avator image {
  width: 100%;
  height: 100%;
  background-size: 100%;
}

.page-username {
  font-size: 40rpx;
  font-family: Source Sans Pro;
  font-weight: 400;
  color: rgba(255,255,255,1);
  text-align: center;
  margin-top: 164rpx;
}

.page-farmname {
  font-size: 28rpx;
  font-family: Source Sans Pro;
  font-weight: 300;
  margin-top: 8rpx;
  color: rgba(255,255,255,1);
  text-align: center;
}

.page-bg {
  position: absolute;
  width: 490rpx;
  height: 180rpx;
}

.page-bg image {
  width: 100%;
  height: 100%;
  background-size: 100%;
}

.page-bg-left {
  left: 0;
  top: 136rpx;
}

.page-bg-right {
  right: 0;
  top: 0;
}

.page-farm {
  display: flex;
  justify-content: space-between;
  padding: 58rpx 38rpx 58rpx 32rpx;
  margin: 26rpx 0 14rpx;
  background: #fff;
}

.page-farm-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.page-farm-png {
  width: 39rpx;
  height: 33rpx;
  background-size: 100%;
}

.page-farm-name {
  font-size: 36rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  padding-left: 34rpx;
  color: rgba(89,87,87,1);
}

.page-farm-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.page-farm-score {
  font-size: 28rpx;
  font-family:S ource Han Sans CN;
  font-weight: 400;
  color: rgba(255,255,255,1);
  width: 81rpx;
  height: 81rpx;
  margin-right: 28rpx;
  line-height: 81rpx;
  background: rgba(91,193,119,1);
  border-radius: 50%;
  text-align: center;
}
.userImg{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto 10rpx;
  border-radius: 50%;
}
.page-farm-router {
  width: 44rpx;
  height: 33rpx;
  background-size: 100%;
}

.page-lists {
  background: #fff;
}

.page-list {
  display: flex;
  justify-content: space-between;
  width: 687rpx;
  padding: 30rpx 0 34rpx;
  margin: 0 auto;
}

.page-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.page-left image {
  width: 32rpx;
  height: 32rpx;
  background-size: 100%;
}

.page-right {
  display: flex;
  align-items: center;
}

.page-manage {      
  border-bottom: 1rpx solid #eaeaea;
}

.page-right image {
  width: 9rpx;
  height: 20rpx;
  background-size: 100%;
}

.page-farm-info-percentage {
  font-size:20rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(255,255,255,1);
  background:rgba(243,151,0,1);
  border-radius:20rpx;
  padding: 8rpx 10rpx 8rpx;
  margin-left: 20rpx;
}
.page-message{
  position: absolute;
  right: -36rpx;
  top: 0;
  background: #f00;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 50%;
}