/* pages/crop-msg/index.wxss */
.crop-msg{
  width: 750rpx;
  margin: 0 auto;
}
.title{
  display: flex;
  justify-content: space-around;
}
.title view{
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  text-align: center;
  background: #fff;
}
.title view.cur{
  background: #69BE19;
  color: #fff;
}
.content{
  padding: 30rpx;
}
.list{
  display: flex;
  background: #fff;
  padding: 30rpx;
  position: relative;
}
.del{
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  right: 30rpx;
  top: 30rpx;
}
.del image{
  width: 100%;
  height: 100%;
}
.left{
  width: 245rpx;
  height: 245rpx;
}
.left image{
  width: 100%;
  height: 100%;
}
.right{
  padding-top: 30rpx;
  margin-left: 50rpx;
}
.name{
  font-size: 28rpx;
  padding: 20rpx 0;
}
.time{
  font-size: 28rpx;
}
.zuowu{
  font-size: 28rpx;
  font-weight: bold
}
.btn{
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  color: #B2B2B2;
  margin-top: 30rpx;
  border: 1rpx solid #B2B2B2;
}