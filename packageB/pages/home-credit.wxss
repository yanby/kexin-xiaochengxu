.page-home-credit {
  width: 750rpx;
}

.page-title {
  font-size:40rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  line-height:68rpx;
  color:rgba(89,87,87,1);
  text-align: center;
  padding: 36rpx 0;
  background: #fff;
}

.page-info {
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:42rpx;
  color:rgba(89,87,87,1);
  width:615rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  margin: 36rpx auto 20rpx;
  padding: 20rpx 35rpx;
}

.page-scores {
  width:685rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  margin: 0 auto 20rpx;
  padding: 52rpx 0;
}

.page-score {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.page-ball {
  flex: 1 1 auto;
  width:16rpx;
  height:16rpx;
  background:rgba(91,193,119,1);
  border-radius:50%;
  margin-left: 100rpx;
}

.page-txt {
  flex: 1 1 40%;
  font-size:32rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  line-height:42rpx;
  color:rgba(191,191,191,1);
  padding-left: 26rpx;
}

.page-num {
  flex: 1 1 40%;
  font-size:40rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  line-height:42rpx;
  color:rgba(91,193,119,1);
}

.page-use {
  width:685rpx;
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius:12rpx;
  margin: 0 auto;
}

.page-use-title {
  font-size:32rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(89,87,87,1);
  text-align: center;
  padding: 36rpx 0 34rpx;
  width: 524rpx;
  margin: 0 auto;
  border-bottom: 1px solid rgba(191,191,191,1)
}

.page-use-content {
  width: 524rpx;
  margin: 42rpx auto 52rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.page-use-content view {
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(89,87,87,1);
  width:244rpx;
  height:71rpx;
  border:1rpx solid rgba(89,87,87,1);
  opacity:1;
  border-radius:12rpx;
  text-align: center;
  margin-bottom: 26rpx;
  line-height: 71rpx;
}