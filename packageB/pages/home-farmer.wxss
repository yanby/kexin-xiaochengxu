.page-home-farmer {
  width: 750rpx;
  padding-bottom: 30rpx;
}

.page-header {
  position: relative;
}

.page-header-icon1 {
  position: absolute;
  top: -25rpx;
  left: 26rpx;
  width: 156rpx;
  height: 212rpx;
  background-size: 100%;
}

.page-header-content {
  font-size:40rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  line-height:60rpx;
  color:rgba(255,255,255,1);
  width:520rpx;
  height:130rpx;
  padding-top: 28rpx;
  padding-left: 204rpx;
  padding-right: 26rpx;
  margin: 36rpx 0 26rpx;
  background:linear-gradient(180deg,rgba(91,193,119,1) 0%,rgba(57,201,163,1) 100%);
}

.page-header-star {
  position: absolute;
  bottom: 30rpx;
  right: 46rpx;
  width: 150rpx;
  height: 24rpx;
  background-size: 100%;
}

.page-content {
  margin: 32rpx 27rpx 0;
}

.content-title {
  font-size:32rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  line-height:54rpx;
  color:rgba(89,87,87,1);
}

.content-box {
  display: flex;
  justify-content: space-between;
  width: 696rpx;
  margin: 24rpx auto 0;
}

.img{
  width: 336rpx;
  height: 209rpx;
  
}
.img image{
  width: 100%;
  height: 100%;

}

.btn{
  width:686rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  margin: 50rpx auto 30rpx;
  height:95rpx;
  line-height: 95rpx;
  background:rgba(91,193,119,1);
  border-radius:12rpx;
}
.page-msg{
  margin: 50rpx 27rpx 0;
}
.page-msg view {
  display: flex;
}
.page-msg view text{
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;

}
.page-msg view input{
  width: 500rpx;
  height: 70rpx;
  padding-left: 15rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
  line-height: 70rpx;
  border: 1rpx solid #eaeaea;
}
.picker {
  display: inline-block;
  font-size: 32rpx;
  width: 470rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 15rpx;
  padding-right: 30rpx;
 
  border: 1rpx solid #eaeaea;
}
.picker view{
  width: 190rpx;
  font-size: 32rpx;
  position: relative;
}
.picker view::before {
  display: block;
  content: '';
  position: absolute;
  top: 30rpx;
  right: 0rpx;
  width: 10rpx;
  height: 10rpx;
  border-top: 1rpx solid #000;
  border-left: 1rpx solid #000;
  transform: rotate(-135deg);
}