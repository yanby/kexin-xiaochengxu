/* model */
.modal-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 86rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
}

.modal-container-top {
  width: 750rpx;
  height: 100%;
  background-color: #fff;
  position: fixed;
  left: 0;
  top: 89rpx;
  z-index: 1000;
}

.page-card-index {
  overflow: hidden;
  width: 688rpx;
  height: auto;
  margin: 54rpx auto 0;
  background: #FFF;
}

.page-title-index {
  font-size: 40rpx;
  font-family: SF Pro Text;
  font-weight: bold;
  color: rgba(89,87,87,1);
  padding: 10rpx 0 40rpx;
  text-align: center;
}

.page-boxs-index {
  display: flex;
  justify-content: space-between;
  width: 600rpx;
  margin: 0 auto 30rpx;
}

.page-boxs-index .box-index {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 600;
  line-height: 40rpx;
  color: rgba(191,191,191,1);
  width: 275rpx;
  padding: 10rpx 0;
  border: 2rpx solid rgba(191,191,191,1);
  border-radius: 12rpx;
  text-align: center;
}

.page-boxs-index .box-active-index {
  color: rgba(91,193,119,1);
  border: 2rpx solid rgba(91,193,119,1);
}

.modal-button{
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 600;
  line-height: 56rpx;
  color: rgba(255,255,255,1);
  width: 686rpx;
  padding: 20rpx 0 18rpx;
  margin: 0 auto 60rpx;
  text-align: center;
  background: #5BC177;
  border-radius: 6rpx;
}
.modal-button-grey {
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:600;
  color:rgba(191,191,191,1);
  background:rgba(234,234,234,1);
  padding: 28rpx 0;
  text-align: center;
}
.pv-left-index{
  margin-bottom: 50rpx;
}
.picker-view{
  width: 600rpx;
  margin: 0 auto;
  height: 200rpx;
  font-size: 34rpx;
}
.picker-view view{
  line-height: 34px;
  text-align: center;
}